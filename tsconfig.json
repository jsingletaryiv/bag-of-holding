{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/out-tsc",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": false,
    "removeComments": false,
    "typeRoots": [                        
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jasmine"
    ],
    "paths": {            
      "@app/*":       ["app/*"],
      "@assets/*":    ["assets/*"],
      "@core/*":      ["app/core/*"],
      "@env/*":       ["environments/*"],
      "@helpers/*":   ["app/helpers/*"],
      "@routes/*":    ["app/modules/*"],
      "@shared/*":    ["app/shared/*"]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
